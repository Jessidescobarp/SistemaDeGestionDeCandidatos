@model SistemaDeGestionDeCandidatos.Models.CandidateExperience

<div class="modal-body">
    <form asp-action="Create" method="post" id="candidateExperienceForm">
        <div class="form-group">
            <label asp-for="Company" class="control-label"></label>
            <input asp-for="Company" class="form-control" required />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Job" class="control-label"></label>
            <input asp-for="Job" class="form-control" required />
            <span asp-validation-for="Job" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Salary" class="control-label"></label>
            <input asp-for="Salary" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BeginDate" class="control-label"></label>
            <input asp-for="BeginDate" class="form-control" type="date" required />
            <span asp-validation-for="BeginDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" class="form-control" type="date" required />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="IdCandidate" />
        <button type="submit" class="btn btn-success">Guardar</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
